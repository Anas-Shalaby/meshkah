{
  "manifest_version": 3,
  "name": "مشكاة - مذكرك بالحديث اليومى",
  "version": "1.0.0",
  "description": "يذكر المستخدمين بالأحاديث اليومية",
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/16-16.png",
      "32": "icons/32-32.png",
      "128": "icons/128x128.png"
    },
    "default_popup": "settings.html"
  },
  "icons": {
    "16": "icons/16-16.png",
    "32": "icons/32-32.png",
    "128": "icons/128x128.png"
  },
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
